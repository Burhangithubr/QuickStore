<style>
  body {
    background: linear-gradient(135deg, #ff00cc, #3333ff, #00ffe7, #ffcc00);
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
    color: #fff;
    font-family: 'Comic Sans MS', cursive, sans-serif;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 30px;
    color: #ffea00;
    text-shadow: 2px 2px 6px #ff0080;
    animation: flicker 1.5s infinite alternate;
  }

  @keyframes flicker {
    0% { opacity: 0.9; text-shadow: 0 0 5px #fff, 0 0 10px #ff00ff, 0 0 20px #ff00ff; }
    100% { opacity: 1; text-shadow: 0 0 10px #fff, 0 0 20px #00ffff, 0 0 30px #00ffff; }
  }

  .orders-table {
    width: 100%;
    margin: auto;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    box-shadow: 0 0 25px #00ffff;
    border-collapse: collapse;
    overflow: hidden;
  }

  .orders-table th,
  .orders-table td {
    padding: 15px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    text-align: center;
  }

  .orders-table th {
    background: rgba(0, 0, 0, 0.7);
    color: #00ffcc;
    font-weight: bold;
    font-size: 1.2rem;
    text-transform: uppercase;
  }

  .orders-table tr:hover {
    background-color: rgba(255, 255, 255, 0.15);
    transform: scale(1.02);
    transition: all 0.4s ease-in-out;
  }

  .order-item {
    color: #ffccff;
    font-weight: bold;
    font-size: 1rem;
  }

  .currency {
    color: #ffff00;
    font-weight: bold;
    font-size: 1.1rem;
    text-shadow: 0 0 10px #ffcc00;
  }
</style>


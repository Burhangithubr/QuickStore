<h1>New Store</h1>

<%= form_with model: @store, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :contact_info %><br>
    <%= form.text_field :contact_info %>
  </div>

  <%= form.submit "Create Store" %>
<% end %>
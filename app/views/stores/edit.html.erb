<!-- Crazy Neon Edit Store Form -->
<div style="min-height: 100vh; background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); padding: 50px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: white;">

  <h2 style="text-align: center; font-size: 38px; font-weight: bold;
      background: linear-gradient(to right, #ff6a00, #ee0979);
      -webkit-background-clip: text; color: transparent;
      text-shadow: 2px 2px 10px rgba(0,0,0,0.5);">
    âœ¨ Edit Store Profile
  </h2>

  <div style="max-width: 600px; margin: 40px auto; background: rgba(255,255,255,0.05);
      padding: 30px; border-radius: 15px; box-shadow: 0 0 25px rgba(255,255,255,0.2);">

    <%= form_with model: @store, url: store_path, method: :patch do |form| %>

      <div style="margin-bottom: 25px;">
        <%= form.label :name, style: "font-weight: bold;" %><br>
        <%= form.text_field :name, style: "width: 100%; padding: 12px 15px;
            background: rgba(255,255,255,0.1); border: none; border-radius: 10px;
            color: white; box-shadow: inset 0 0 8px rgba(0,0,0,0.4);" %>
      </div>

      <div style="margin-bottom: 25px;">
        <%= form.label :description, style: "font-weight: bold;" %><br>
        <%= form.text_area :description, rows: 4, style: "width: 100%; padding: 12px 15px;
            background: rgba(255,255,255,0.1); border: none; border-radius: 10px;
            color: white; box-shadow: inset 0 0 8px rgba(0,0,0,0.4);" %>
      </div>

      <div style="margin-bottom: 30px;">
        <%= form.label :contact_info, style: "font-weight: bold;" %><br>
        <%= form.text_field :contact_info, style: "width: 100%; padding: 12px 15px;
            background: rgba(255,255,255,0.1); border: none; border-radius: 10px;
            color: white; box-shadow: inset 0 0 8px rgba(0,0,0,0.4);" %>
      </div>

      <div style="text-align: center;">
        <%= form.submit "ðŸš€ Update Store", style: "
            padding: 12px 30px; font-size: 16px; font-weight: bold; color: white;
            background: linear-gradient(to right, #00c9ff, #92fe9d);
            border: none; border-radius: 50px; cursor: pointer;
            box-shadow: 0 0 15px rgba(0,255,255,0.5);
            transition: all 0.3s ease;" ,
            onmouseover: "this.style.transform='scale(1.08)'; this.style.boxShadow='0 0 30px rgba(0,255,255,1)'",
            onmouseout: "this.style.transform='scale(1)'; this.style.boxShadow='0 0 15px rgba(0,255,255,0.5)'" %>
      </div>

    <% end %>
  </div>
</div>

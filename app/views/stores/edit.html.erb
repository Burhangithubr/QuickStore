<h2>Edit Store Profile</h2>

<%= form_with model: @store, url: store_path, method: :patch do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :contact_info %><br>
    <%= form.text_field :contact_info %>
  </div>

  <div>
    <%= form.submit "Update Store", class: "btn btn-success" %>
  </div>
<% end %>

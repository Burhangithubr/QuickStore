<h1>My Orders</h1>

<% if @orders.any? %>
  <% @orders.each do |order| %>
    <div style="border: 1px solid #ccc; padding: 12px; margin-bottom: 16px;">
      <h3>Order #<%= order.id %></h3>
      <p><strong>Status:</strong> <%= order.status.titleize %></p>
      <p><strong>Shipping Address:</strong> <%= order.shipping_address %></p>
      <p><strong>Total Amount:</strong> <%= number_to_currency(order.total_amount) %></p>

      <h4>Items:</h4>
      <ul>
        <% order.order_items.each do |item| %>
          <li>
            <strong><%= item.product.name %></strong> — Qty: <%= item.quantity %> — Price: <%= number_to_currency(item.unit_price) %>
          </li>
        <% end %>
      </ul>

    </div>
  <% end %>
<% else %>
  <p>You haven't placed any orders yet.</p>
<% end %>

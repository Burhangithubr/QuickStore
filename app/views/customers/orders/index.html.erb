<body style="background: linear-gradient(to right, #f8f9fc, #e2e6ea); padding: 30px; font-family: 'Segoe UI', sans-serif;">

  <h1 style="font-size: 36px; margin-bottom: 30px; text-align: center; color: #4e54c8; letter-spacing: 1px; text-shadow: 1px 1px 3px rgba(0,0,0,0.1);">
    🛍️ My Orders
  </h1>

  <% if @orders.any? %>
    <% @orders.each do |order| %>
      <div style="background: #ffffff; border-left: 6px solid #4e54c8; border-radius: 16px; padding: 24px; margin-bottom: 24px; box-shadow: 0 10px 18px rgba(0,0,0,0.1); transition: all 0.3s ease-in-out;">
        
        <h3 style="font-size: 24px; margin-bottom: 10px; color: #1cc88a;">
          📦 Order #<%= order.id %>
        </h3>

        <p><strong>Status:</strong> 
          <span style="background: #edf2f7; padding: 4px 10px; border-radius: 6px; font-weight: bold; color: <%= order.status == "completed" ? "#1cc88a" : "#f6c23e" %>;">
            <%= order.status.present? ? order.status.titleize : "Unknown" %>

          </span>
        </p>

        <p><strong>Shipping Address:</strong> 🚚 <%= order.shipping_address %></p>
        <p><strong>Total Amount:</strong> 💵 <%= number_to_currency(order.total_amount) %></p>

        <h4 style="margin-top: 16px; color: #4e54c8;">🛒 Items:</h4>
        <ul style="list-style: none; padding: 0;">
          <% order.order_items.each do |item| %>
            <li style="background: #f1f3f8; margin-bottom: 8px; padding: 10px 14px; border-radius: 10px; display: flex; justify-content: space-between;">
              <span><strong><%= item.product.name %></strong> × <%= item.quantity %></span>
              <span style="font-weight: bold;"><%= number_to_currency(item.unit_price) %></span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% else %>
    <div style="text-align: center; margin-top: 60px;">
      <p style="font-size: 20px; color: #888;">😔 You haven't placed any orders yet.</p>
      <%= link_to "Start Shopping Now 🛍️", root_path, style: "color: #4e54c8; text-decoration: none; font-weight: bold; font-size: 18px;" %>
    </div>
  <% end %>
</body>

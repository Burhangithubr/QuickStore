<!-- Crazy Full Page Gradient Background -->
<div style="min-height: 100vh; background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); padding: 40px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

  <!-- Neon Header -->
  <h1 style="font-size: 42px; font-weight: 900; text-align: center; background: linear-gradient(to right, #00c6ff, #0072ff, #ff00cc); -webkit-background-clip: text; color: transparent; text-shadow: 2px 2px 6px rgba(0,0,0,0.3); margin-bottom: 30px;">
    âœ¨ Welcome to Quickstore Dashboard
  </h1>

  <!-- Profile and Logout Buttons as real buttons -->
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    
    <%= button_to edit_customer_registration_path, method: :get, style: "padding: 0; border: none; background: none;" do %>
      <button type="submit"
        style="font-size: 16px; font-weight: bold; padding: 10px 20px; color: white;
               background: linear-gradient(to right, #4facfe, #00f2fe);
               border-radius: 12px; text-decoration: none; cursor: pointer;
               box-shadow: 0 0 12px rgba(0, 242, 254, 0.6);
               transition: transform 0.3s ease;"
        onmouseover="this.style.transform='scale(1.1)'"
        onmouseout="this.style.transform='scale(1)'">
        ðŸ‘¤ My Profile
      </button>
    <% end %>

    <%= button_to destroy_customer_session_path, method: :delete, style: "padding: 0; border: none; background: none;" do %>
      <button type="submit"
        style="font-size: 16px; font-weight: bold; padding: 10px 20px; color: white;
               background: linear-gradient(to right, #ff512f, #dd2476);
               border-radius: 12px; text-decoration: none; cursor: pointer;
               box-shadow: 0 0 12px rgba(255, 81, 47, 0.6);
               transition: transform 0.3s ease;"
        onmouseover="this.style.transform='scale(1.1)'"
        onmouseout="this.style.transform='scale(1)'">
        ðŸšª Logout
      </button>
    <% end %>

  </div>

  <!-- Store Grid -->
  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 25px;">
    <% @stores.each do |store| %>
      <div style="background: linear-gradient(145deg, #ff9a9e, #fad0c4); padding: 20px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0,0,0,0.3); text-align: center; transition: transform 0.3s ease, box-shadow 0.3s ease;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 12px 24px rgba(0,0,0,0.5)'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 8px 16px rgba(0,0,0,0.3)'">
        <h2 style="font-size: 20px; font-weight: bold; color: #333; margin-bottom: 15px;"><%= store.name %></h2>
        <%= link_to "ðŸ›ï¸ View Products", customers_store_products_path(store),
            style: "padding: 10px 16px; background: linear-gradient(to right, #8e2de2, #4a00e0); color: white; border-radius: 10px; font-weight: bold; text-decoration: none; box-shadow: 0 0 10px rgba(138,43,226,0.5); transition: background-color 0.3s ease;", onmouseover: "this.style.background='linear-gradient(to right, #4a00e0, #8e2de2)'", onmouseout: "this.style.background='linear-gradient(to right, #8e2de2, #4a00e0)'" %>
      </div>
    <% end %>
  </div>

</div>

<h1>Edit Product</h1>

<%= form_with(model: [@store, @product], local: true) do |form| %>
  <% if @product.image.present? %>
    <div class="product-image">
      <img src="<%= @product.image %>" alt="<%= @product.name %>" style="max-width: 200px;">
    </div>
  <% else %>
    <p>No image available</p>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stock %>
    <%= form.number_field :stock, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Image URL" %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <%= form.submit "Update Product", class: "btn btn-success mt-3" %>
  <%= link_to "Cancel", store_products_path(@store), class: "btn btn-secondary mt-3" %>
<% end %>
